doctype html
html(lang="pt-PT")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css")
        
    body.bg-light
            .container.mt-5
                h1.text-center.mb4= message

                a.btn.btn-secondary.mb-3(href="/") Voltar ao Início

                table.table.table-striped.table-hover
                    thead.table-dark
                        tr
                            th Nome
                            th Idade
                            th Curso
                            th.text-center Ações
                    tbody
                        each aluno in alunos
                            tr
                                td= aluno.name
                                td= aluno.age
                                td= aluno.course
                                td.text-center
                                    a.btn.btn-sm.btn-primary.me-2(href="") Editar
                                    a.btn.btn-sm.btn-danger.me-2(href="") Apagar